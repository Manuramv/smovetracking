<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smove.com.smovebook.activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="24dp"
        android:padding="8dp"
        android:id="@+id/fromLayout"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_fromTime"
            android:layout_weight="1.8"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1e2d63"
            android:textColor="#ffffff"
            android:text="From"
            android:id="@+id/btn_from"
            android:layout_weight=".2"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:padding="8dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/fromLayout"
        android:orientation="horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_toTime"
            android:layout_weight="1.8"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:background="#1e2d63"
            android:textColor="#ffffff"
            android:id="@+id/btn_toTime"
            android:layout_weight=".2"
            />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1e2d63"
        android:padding="16dp"
        android:textColor="#ffffff"
        android:text="Taxi Availability"
        android:layout_centerInParent="true"
        android:id="@+id/btn_findTaxi"
        />

